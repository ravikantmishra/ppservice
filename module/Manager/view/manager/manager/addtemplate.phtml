function isTemplateExist(templateName)
{
	$.ajax({
		url:'<?php echo $this->url('manager',array('action' => 'templateExist'))?>',
		type: "post",
		data:'templateName='+templateName,
		success: function( data ){
			returnData = $.parseJSON(data);
			if(returnData.response == true)
			{
				$('#errorMsg').html('');
				$('#errorMsg').append(returnData.result);
				$('#errorMsg').show();
				$('#templateName').val('');
			}
			else
			{
				$('#errorMsg').hide();
			}
		}
	});
}

function insertElements(insertValue)
{
